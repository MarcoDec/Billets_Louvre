{% extends '::base.html.twig' %}
{% block title %}Welcome in Le Louvre{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {#<link rel="stylesheet" href="{{ asset('bundles/adesignscalendar/css/fullcalendar/fullcalendar.css') }}" />#}
    <link rel="stylesheet" href="{{ asset('bundles/MDPlanning/css/styles.css') }}" />
{% endblock %}

{% block body %}
    <div class="container">
            <div class="row">
                <img class="col-lg-12 col-sm-12" src="{{asset('bundles/MDPlanning/img/LeLouvre.png')}}" alt="Le Louvre"/>
            </div>
            <div class="row">
                <aside class="col-lg-4 col-sm-12">
                        <div  id="reservation">
                        {{ form_start(form, {'method': 'POST'}) }}
                        <legend>RESERVATIONS</legend>
                            Erreurs : {{ form_errors(form) }} <br>
                            {{ form_row(form.dateReservation, {'class':'form-control'}) }}<br>
                            <p class="info">Le Louvre est fermé les samedis et dimanches.</p>
                        
                            {{ form_row(form.nbBillets, {'class':'form-control', 'min':'1', 'max':'50'})}}<br>
                            <p class="info">Les capacités d'accueil lu Louvre sont limités à 1000 places par jour ouvrés. Merci de consulter le calendrier d'ouverture et de disponibilités ci-joint.</p>
                        
                            {{ form_row(form.demiJournee, {'class':'form-control'}) }}
                            <p class="info">Toute réservation pour la 1/2 journée courantes doit être passée avant 14h00.</p>
                        {{ form_end(form) }}
                        </div>
                        <section class="col-lg-8 col-sm-12" id="tarifs">
                                {% for key, tarif in tarifs %}
                                    <div class='tarif'>
                                        <h1>Tarif {{key}}</h1>
                                        <h2>Prix : {{ tarif.prix }}</h2>
                                        <h2>Nombre de billet: {{ tarif.nbBillets }}</h2>
                                        <p>{{ tarif.description }}</p>
                                    </div>
                                {% endfor %}
                                    
                        </section>
                        
                        <!--<form id="annulation">
                            <legend>ANNULATIONS</legend>
                            <label for="theDate">Date</label>
                            <input type="date" id='theDate' name='theDate' class="form-control">
                            <label for="refCommande">Référence de la commande</label>
                            <input type='text' id='refCommande' name='refCommande' class="form-control">
                                <input type='submit' value='Annuler Billet(s)'>
                        </form>-->
                </aside>
                <!--<section class="col-lg-8 col-sm-12" id="calendar">
                    {#{% include 'ADesignsCalendarBundle::calendar.html.twig' %}#}
                </section>-->
            </div>
        
    </div>
{% endblock %}

